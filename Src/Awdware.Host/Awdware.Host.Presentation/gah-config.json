{
  "$schema": "https://raw.githubusercontent.com/awdware/gah/master/assets/gah-config-schema.json",
  "plugins": [
    {
      "name": "@awdware/gah-translation-merger",
      "settings": {
        "searchGlobPattern": ".gah/src/assets/**/translations/*.json",
        "destinationPath": ".gah/src/assets/i18n"
      }
    }
  ]
}