{
  "$schema": "https://raw.githubusercontent.com/awdware/gah/master/shared/assets/gah-config-schema.json",
  "plugins": [
    {
      "name": "@awdware/gah-translation-merger",
      "version": "1.0.0",
      "settings": {
        "searchGlobPattern": "src/assets/**/translations/*.json",
        "destinationPath": "src/assets/i18n",
        "matchPattern": ""
      }
    },
    {
      "name": "@awdware/gah-angular-json-plugin",
      "version": "0.1.0",
      "settings": {
        "ngJson": {
          "projects": {
            "gah-host": {
              "architect": {
                "build": {
                  "options": {
                    "assets": [
                      {
                        "glob": "**/*",
                        "input": "node_modules/monaco-editor/dev",
                        "output": "./assets/monaco/"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}